{
	"compilerOptions": {
		"types": ["node"],
		"target": "ES2022",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"maxNodeModuleJsDepth": 20,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@convex/*": ["./convex/*"]
		},
		"baseUrl": ".",
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"convex/**/*.ts",
		"convex/**/*.mts",
		"convex/_generated/**/*.ts",
		"src/types/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"src/app/components/dashboardUi/SideMenu/TeamDropDown.jsx",
		"src/app/api/product/route.ts",
		"src/app/api/notifications/route.ts",
		"src/app/api/extendAd/route.ts",
		"src/app/api/checkAdExpiration/route.ts",
		"src/app/api/checkAdExpiration/route.ts",
		"src/app/api/adRequest/route.tsx",
		"src/app/api/adRequest/route.tsx"
	]
}
